{
  "name": "youcord-desktop",
  "version": "v1.0.0-beta.1",
  "description": "Stream your currently playing track from Spotify, Yandex Music (including lyrics), or your current YouTube video directly to your Discord Rich Presence.",
  "main": "dist/main/index.js",
  "author": "hikaru_kl",
  "homepage": "https://hikaru-kl.ru",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-forge start",
    "dev": "electron-vite dev --outDir=dist",
    "build": "electron-vite build --outDir=dist",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "package": "electron-vite build --outDir=dist && electron-forge package",
    "make": "electron-vite build --outDir=dist && electron-forge make --outDir=dist"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@xhayper/discord-rpc": "^1.2.0",
    "auto-launch": "^5.0.6",
    "axios": "^1.7.7",
    "cookie-parser": "^1.4.7",
    "dayjs": "^1.11.13",
    "discord-rpc": "^4.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.1",
    "flowbite": "^2.5.1",
    "node-fetch": "^3.3.2",
    "otplib": "^12.0.1",
    "request": "^2.88.2",
    "windows-shortcuts": "^0.1.6"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.6.1",
    "@electron-forge/maker-deb": "^7.6.1",
    "@electron-forge/maker-rpm": "^7.6.1",
    "@electron-forge/maker-squirrel": "^7.6.1",
    "@electron-forge/maker-zip": "^7.6.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.6.1",
    "@electron-forge/plugin-fuses": "^7.6.1",
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron/fuses": "^1.8.0",
    "@rushstack/eslint-patch": "^1.10.3",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/eslint-config-prettier": "^9.0.0",
    "autoprefixer": "^10.4.20",
    "electron": "^31.0.2",
    "electron-builder": "^26.0.12",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.26.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.10",
    "vite": "^5.3.1",
    "vue": "^3.4.30"
  }
}
